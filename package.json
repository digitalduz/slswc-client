{
  "name": "slswc-client",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm install && composer install && composer dump-autoload && gulp",
    "dev": "gulp && gulp watch",
    "build": "gulp build",
    "build-release": "composer install --no-dev -o && gulp build && gulp release && composer install",
    "version": "gulp version && git add .",
    "format-scss": "prettier --write \"./assets/src/scss/**/*.scss\"",
    "format-js": "prettier-eslint --write --eslint-config-path=.eslintrc.js --config=.prettierrc \"./assets/src/js/**/*.js\"",
    "format-php": "composer run fix",
    "lint-js": "eslint assets/src/js; exit 0",
    "lint-scss": "stylelint assets/src/scss; exit 0",
    "lint-php": "composer run lint; exit 0",
    "cypress:open": "cypress open",
    "cypress:test": "cypress run"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "@babel/register": "^7.8.6",
    "@cypress/browserify-preprocessor": "^2.1.4",
    "@wordpress/browserslist-config": "^2.6.0",
    "ajv": "^5.5.2",
    "ajv-keywords": "^2.1.1",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.1.0",
    "babelify": "^10.0.0",
    "beeper": "^1.1.1",
    "browser-sync": "^2.26.7",
    "browserify": "^16.5.0",
    "css-mqpacker": "^7.0.0",
    "cypress": "^3.8.3",
    "del": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "gulp-buffer": "0.0.2",
    "gulp-cheerio": "^0.6.3",
    "gulp-cli": "^2.2.0",
    "gulp-copy": "^4.0.1",
    "gulp-csso": "^3.0.1",
    "gulp-eslint": "^5.0.0",
    "gulp-imagemin": "^5.0.3",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^5.0.0",
    "gulp-sort": "^2.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-stylelint": "^8.0.0",
    "gulp-svgmin": "^2.1.0",
    "gulp-svgstore": "^7.0.1",
    "gulp-tap": "^1.0.1",
    "gulp-uglify": "^3.0.2",
    "gulp-wp-pot": "^2.3.6",
    "gulp-zip": "^4.2.0",
    "gulp.spritesmith": "^6.11.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "static-eval": "^2.0.3",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^5.3.0",
    "stylelint-config-wordpress": "^13.1.0"
  },
  "lint-staged": {
    "assets/src/scss/**/*.scss": [
      "prettier --write",
      "stylelint",
      "git add"
    ],
    "assets/src/js/**/*.js": [
      "prettier-eslint --write --eslint-config-path=.eslintrc.js --config=.prettierrc",
      "eslint",
      "git add"
    ],
    "*.php": [
      "./vendor/bin/phpcbf --warning-severity=0 -s --ignore-annotations --extensions=php,html ./includes ./templates",
      "./vendor/bin/phpcs --warning-severity=0 -s --ignore-annotations --extensions=php,html ./includes ./templates",
      "git add"
    ]
  },
  "dependencies": {
    "sass": "^1.43.2"
  }
}