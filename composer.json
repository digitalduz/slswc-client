{
    "name": "madvault/slswc-client",
    "description": "Software License Server for WooCommerce",
    "keywords": [
        "wordpress",
        "plugin"
    ],
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Jamie Madden",
            "email": "support@licenseserver.io"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "classmap": [
            "class-slswc-client.php"
        ]
    },
    "require-dev": {
        "wc-vendors/wc-vendors-phpcs": "dev-main"
    },
    "prefer-stable" : true,
    "scripts": {
        "fix": "./vendor/bin/phpcbf --warning-severity=0 -s --ignore-annotations --extensions=php ./class-slswc-client.php ./sample_products",
        "lint": "./vendor/bin/phpcs --warning-severity=0 -s --ignore-annotations --extensions=php ./",
        "phptest": "./vendor/bin/phpcs -p ./class-slswc-client.php ./ --standard=PHPCompatibility --runtime-set testVersion 5.3-8.0 --report-full=./reports/php-compatibility.html"
    },
    "config": {
        "allow-plugins": {}
    }
}
